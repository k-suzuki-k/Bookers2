<div class="container">
	<div class="row">

		<h1>User info</h1>
		<div>
			<%= form_for(@user) do |f| %>

				<%= render 'layouts/error_messages', model: f.object %>

				<label>Name</label>
				<%= f.text_field :name %>
				<p>Image</p>
				<%= f.attachment_field :profile_image %>
				<label>Introduction</label>
				<%= f.text_area :introduction %>
				<p><%= f.submit "Update User" %></p>
			<% end %>
		</div>
	</div>
</div>

