<h1>Book detail</h1>
<table>
	<tbody>
		<tr>

			<th><%= link_to user_path(@book_detail.user) do %>
				<%= attachment_image_tag @book_detail.user, :profile_image, :fill, 30, 30, format:'jpeg', fallback: "no_image.jpg" %><br><%= @book_detail.user.name %> <% end %> </th>

			<th><%= link_to @book_detail.title, book_path(@book_detail) %></th>
			<th><%= @book_detail.body %><t/th>

			<% if @user == current_user %>
			<th><%= link_to "Edit", edit_book_path(@book_detail) %></th>
			<th><%= link_to "Destroy", book_path(@book_detail), method: :delete %></th>
			<% end %>

		</tr>
	</tbody>
</table>
		 <%= render 'users/function', book:@book, user:@user %>
