<div class="container">
	<div class="row">

		<%= render 'users/function', book:@book, user:@user %>

		<div class="col-xs-9">
			<h1>Book detail</h1>
			<table class="table table-striped">
				<tbody>
					<tr>

						<th><%= link_to user_path(@book_detail.user) do %>
							<%= attachment_image_tag @book_detail.user, :profile_image, :fill, 30, 30, format:'jpeg', fallback: "no_image.jpg", size:"40x40" %><br><%= @book_detail.user.name %> <% end %> </th>

					<th><%= link_to @book_detail.title, book_path(@book_detail) %></th>
					<th><%= @book_detail.body %><t/th>

						<% if @user == current_user %>
							<th><%= link_to "Edit", edit_book_path(@book_detail), class:"btn-sm btn-success" %></th>
							<th><%= link_to "Destroy", book_path(@book_detail), method: :delete, class:"btn-sm btn-danger" %></th>
						<% end %>

					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
