<h1>Books</h1>
<div>
	<table>

	        <%= render 'layouts/error_messages', model: @book %>

		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>

		<% @books.each do |f| %>
		<tbody>
			<tr>
				<td><%= link_to user_path(f.user) do %>
					<%= attachment_image_tag f.user, :profile_image, :fill, 30, 30, format:'jpeg', fallback: "no_image.jpg" %> <% end %> </td>
				<td><%= link_to f.title, book_path(f) %></td>
				<td><%= f.body %></td>
			</tr>
		</tbody>
		<% end %>

	</table>
		 <%= render 'users/function', book:@book, user:@user %>
</div>

