<div class="container">
	<div class="row">

		<%= render 'layouts/error_messages', model: @book %>

		<%= render 'users/function', book:@book, user:@user %>

		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>

				<% @books.each do |f| %>
					<tbody>
						<tr>
							<td><%= link_to user_path(f.user) do %>
								<%= attachment_image_tag f.user, :profile_image, :fill, 30, 30, format:'jpeg', fallback: "no_image.jpg", size:"40x40" %> <% end %> </td>
						<td><%= link_to f.title, book_path(f) %></td>
						<td><%= f.body %></td>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>
