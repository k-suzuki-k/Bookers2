<h1>Book Edit</h1>

<%= form_for(@book) do |f| %>

	<%= render 'layouts/error_messages', model: f.object %>

	<p>Title</p>
	<%= f.text_field :title %>
	<p>Opinion</p>
	<%= f.text_area :body %>

	<p>
	<%= f.submit "Update Book" %>
	</p>

	<p>
	<%= link_to "Show", book_path(@book) %>
	<span>|</span>
	<%= link_to "Back", user_path(@book.user_id) %>
	</p>

<% end %>
